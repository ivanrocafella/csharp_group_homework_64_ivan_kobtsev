@model List<Message>

<head>
    <link rel="stylesheet" href="~/css/chat.css" />
</head>

<div class="container_chat">
    @foreach (var item in Model)
    {
            <div class="card">
                <div class="card-body">
                    <img id="Account_Avatar" width="100" height="100" class="card-title" src="@item.Account.Avatar" alt="Alternate Text" />
                    <h5 id="Account_Name" class="card-title">@item.Account.UserName</h5>
                    <p id="DateTime_Create">@item.DateCreate</p>
                    <p id="TextMessage">@item.TextOfMessage</p>
                </div>
            </div>
    }
</div>

<div id="solution_div_form">
    <textarea id="message" placeholder="Введите ваше сообщение"></textarea>
    <input type="button" id="message_send" onclick="SendMessage('@User.Identity.Name')" value="Отправить" />
</div>

@section scripts{
    <script>

        var messages = [];
        let CountMess;
        let i = 0;

        let htmlMessage = '<div class="card">' +
            '<div class="card-body">' +
            '<img id="ext_Account_Avatar" width="100" height="100" class="card-title" src="" alt="Alternate Text" />' +
            '<h5 id="ext_Account_Name" class="card-title"></h5>' +
            '<p id="ext_DateTime_Create"></p>' +
            '<p id="ext_TextMessage"></p>' +
            '</div></div>';

        function SendMessage(username) {
              $.post('@Url.Action("SendMessage", "Chat")',{
                      message_text: $('#message').val(),
                      user_name: username
              }, function (response) {
                      $('.container_chat').append(htmlMessage)
                      $('#ext_TextMessage').text(response.accountMessageView.message_text)
                      $('#ext_DateTime_Create').text(response.accountMessageView.date_create)
                      $('#ext_Account_Name').text(response.accountMessageView.user_name)
                      $('#ext_Account_Avatar').attr("src", response.accountMessageView.avatar)
                      
                  } , console.log(messages), console.log(messages.length),
                
              )
        }

       
        
        if (messages.length > 0) {
            let intervalFunc = setInterval(function LoadNewMessages() {
                for (var m in messages) {
                    i++;
                    $('#ext_TextMessage').text(m.message_text)
                    $('#ext_DateTime_Create').text(m.date_create)
                    $('#ext_Account_Name').text(m.user_name)
                    $('#ext_Account_Avatar').attr("src", m.avatar)
                    $('.container_chat').append(htmlMessage)
                    console.log(i)
                    if (i == messages.length) {
                        clearInterval(intervalFunc);
                        messages = [];
                    }
                }
            }, 5000);
        }
     

    </script>

}